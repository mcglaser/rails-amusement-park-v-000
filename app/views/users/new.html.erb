<h2>New User</h2>
<%= form_for @user do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>
  <p><%= f.label :password %>
  <%= f.password_field :password %></p>
  <p><%= f.label "Height (in inches)" %>
  <%= f.number_field :height %></p>
  <p><%= f.label "How happy are you? (1-5)" %>
  <%= f.number_field :happiness %></p>
  <p><%= f.label "How nauseous are you? (1-5)" %>
  <%= f.number_field :nausea %></p>
  <p><%= f.label "How much money do you have?" %>
  <%= f.number_field :tickets %></p>
  <p><%= f.label "Admin?" %>
  <%= f.check_box :admin %></p>
  <%= f.submit %>
<% end %>
